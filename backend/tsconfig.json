{
  "compilerOptions": {
    // Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Node.js backend
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"],

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Checks
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Interop & perf
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
